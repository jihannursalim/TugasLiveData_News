<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNews"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/imgNews"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:id="@+id/txtJudul"
                android:text="Judul News"
                android:layout_toRightOf="@id/imgNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:id="@+id/txtTanggal"
                android:text="Tanggal News"
                android:layout_toRightOf="@id/imgNews"
                android:layout_below="@id/txtJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/txtPenulis"
                android:text="Penulis News"
                android:layout_toRightOf="@id/imgNews"
                android:layout_below="@id/txtTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>